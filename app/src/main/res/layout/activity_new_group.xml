<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.vanrio.carplan.newGroupActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameLayout"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:id="@+id/nameLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nameLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Description"
            android:id="@+id/descLabel"
            android:layout_alignBottom="@+id/descText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:gravity="top" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:ems="10"
            android:id="@+id/descText"
            android:layout_below="@+id/nameText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressLayout"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/descLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:id="@+id/addressLabel"
            android:layout_alignBottom="@+id/addressText"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addressText"
            android:layout_below="@+id/nameText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityLayout"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addressLayout" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/cityLabel"
            android:layout_alignBottom="@+id/nameLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/cityText"
            android:layout_below="@+id/nameText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stateLayout"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cityLayout">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="State"
            android:id="@+id/stateLabel"
            android:layout_alignBottom="@+id/nameLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/stateText"
            android:layout_below="@+id/nameText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

