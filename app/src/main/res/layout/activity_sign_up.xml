    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/nameLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:id="@+id/addressLabel"
            android:layout_alignBottom="@+id/addressLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/addressText"
            android:layout_below="@+id/userText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addressLayout"
        android:layout_centerHorizontal="true" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/cityLabel"
            android:layout_alignBottom="@+id/cityLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/cityText"
            android:layout_below="@+id/userText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stateLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cityLayout"
        android:layout_centerHorizontal="true" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="State"
            android:id="@+id/stateLabel"
            android:layout_alignBottom="@+id/stateLabel"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/stateText"
            android:layout_below="@+id/userText"
            android:layout_centerHorizontal="true"
            android:background="#ffd7d7d7"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccountButton"
        android:layout_below="@+id/stateLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Account"
        android:id="@+id/textView"
        android:layout_marginTop="39dp"
        android:textSize="30dp"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
